      </aside>

      <div id="main-content"
        class="page-wrap flex-grow max-w-full mx-auto p-4 transition-all duration-300 ease-in-out">

        <header class="flex items-center justify-between mb-4">

          <h1 class="text-2xl font-bold">
            ŸÅÿßÿ™Ÿàÿ±ÿ© ‚Äì <span class="uppercase text-indigo-600"><%= cabang
              %></span>
          </h1>
          <a
            href="/<%= cabang %>/stats"
            class="no-print text-xs px-3 py-1.5 rounded-full bg-indigo-600 text-white hover:bg-indigo-700">
            üìä ÿßŸÑÿ•ÿ≠ÿµÿßÿ¶Ÿäÿßÿ™
          </a>
        </header>

        <div id="invoice-grid" class="grid gap-4 sm:grid-cols-2 xl:grid-cols-5">
        </div>
      </div>
    </div>
    <script>
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('toggle-sidebar-btn');
    const linksText = sidebar.querySelectorAll('span');
    const titleText = sidebar.querySelector('h2');
    
    // ÿßŸÑÿØÿßŸÑÿ© ÿßŸÑÿ±ÿ¶Ÿäÿ≥Ÿäÿ© ŸÑÿ™ÿ®ÿØŸäŸÑ ÿ≠ÿßŸÑÿ© ÿßŸÑÿ¥ÿ±Ÿäÿ∑ ÿßŸÑÿ¨ÿßŸÜÿ®Ÿä
    function toggleSidebar() {
        const isExpanded = sidebar.getAttribute('data-expanded') === 'true';
        
        if (!isExpanded) {
            // ÿ™Ÿàÿ≥Ÿäÿπ ÿßŸÑÿ¥ÿ±Ÿäÿ∑ ÿßŸÑÿ¨ÿßŸÜÿ®Ÿä
            sidebar.classList.remove('w-16');
            sidebar.classList.add('w-60');
            sidebar.setAttribute('data-expanded', 'true');
            sidebar.style.width = '15rem'; // 240px

            // ÿ•ÿ∏Ÿáÿßÿ± ÿßŸÑŸÜÿµŸàÿµ ÿ®ÿ™ÿ£ÿÆŸäÿ± ÿ®ÿ≥Ÿäÿ∑ ÿ®ÿπÿØ ÿ®ÿØÿ° ÿßŸÑÿ≠ÿ±ŸÉÿ©
            setTimeout(() => {
                linksText.forEach(span => {
                    span.classList.remove('opacity-0');
                    span.classList.add('opacity-100');
                });
                titleText.classList.remove('opacity-0');
                titleText.classList.add('opacity-100');
            }, 100); 

        } else {
            // ÿ™ÿµÿ∫Ÿäÿ± ÿßŸÑÿ¥ÿ±Ÿäÿ∑ ÿßŸÑÿ¨ÿßŸÜÿ®Ÿä
            
            // ÿ•ÿÆŸÅÿßÿ° ÿßŸÑŸÜÿµŸàÿµ ŸÅŸàÿ±ÿßŸã
            linksText.forEach(span => {
                span.classList.remove('opacity-100');
                span.classList.add('opacity-0');
            });
            titleText.classList.remove('opacity-100');
            titleText.classList.add('opacity-0');

            // ÿ™ÿ∫ŸäŸäÿ± ÿßŸÑÿπÿ±ÿ∂ ÿ®ÿπÿØ ÿßŸÑÿ•ÿÆŸÅÿßÿ°
            setTimeout(() => {
                sidebar.classList.remove('w-60');
                sidebar.classList.add('w-16');
                sidebar.setAttribute('data-expanded', 'false');
                sidebar.style.width = '4rem'; // 64px
            }, 200); // ÿ™ÿ£ÿÆŸäÿ± ÿ®ÿ≥Ÿäÿ∑ ŸÑÿ∂ŸÖÿßŸÜ ÿßÿÆÿ™ŸÅÿßÿ° ÿßŸÑŸÜÿµ ÿ£ŸàŸÑÿßŸã
        }
    }

    // ÿ±ÿ®ÿ∑ ÿßŸÑÿØÿßŸÑÿ© ÿ®ÿ≤ÿ± ÿßŸÑŸáÿßŸÖÿ®ÿ±ÿ∫ÿ±
    toggleBtn.addEventListener('click', () => {
        // ŸÜÿ∂ŸÖŸÜ ÿ£ŸÜ ÿßŸÑÿ¥ÿ±Ÿäÿ∑ ÿßŸÑÿ¨ÿßŸÜÿ®Ÿä ŸÖÿ±ÿ¶Ÿä ÿπŸÑŸâ ÿßŸÑÿ¥ÿßÿ¥ÿßÿ™ ÿßŸÑŸÉÿ®Ÿäÿ±ÿ© ŸÇÿ®ŸÑ ÿßŸÑÿ™ÿ®ÿØŸäŸÑ
        if (window.innerWidth >= 1024) {
            sidebar.classList.remove('hidden');
            toggleSidebar();
        } 
        // ŸäŸÖŸÉŸÜ ÿ•ÿ∂ÿßŸÅÿ© ŸÖŸÜÿ∑ŸÇ ÿ•ÿ∏Ÿáÿßÿ± ÿßŸÑŸÇÿßÿ¶ŸÖÿ© ÿßŸÑŸÖŸÜÿ®ÿ´ŸÇÿ© ŸÑŸÑÿ¨ŸàÿßŸÑ ŸáŸÜÿß ÿ•ÿ∞ÿß ŸÑÿ≤ŸÖ ÿßŸÑÿ£ŸÖÿ±
    });

    // ŸÑÿ∂ŸÖÿßŸÜ ÿßŸÑÿπÿ±ÿ∂ ÿßŸÑÿ£ŸàŸÑŸä ÿßŸÑÿµÿ≠Ÿäÿ≠ ÿπŸÑŸâ ÿßŸÑÿ¥ÿßÿ¥ÿßÿ™ ÿßŸÑŸÉÿ®Ÿäÿ±ÿ©
    if (window.innerWidth >= 1024) {
        sidebar.classList.remove('hidden');
    }
</script>
    <script>


      // ŸÜÿÆÿ≤ŸëŸÜ ÿßÿ≥ŸÖ ÿßŸÑŸÅÿ±ÿπ ŸÖŸÜ ÿßŸÑÿ≥Ÿäÿ±ŸÅÿ±
      const CABANG = "<%= cabang %>";

      // üîÅ ÿ™ÿ≠ÿØŸäÿ´ ÿßŸÑŸÅŸàÿßÿ™Ÿäÿ± ŸÉŸÑ 2 ÿ´ÿßŸÜŸäÿ© (ÿ™ŸÇÿ±Ÿäÿ®ÿßŸã ŸÅŸàÿ±Ÿä)
      async function refreshInvoices() {
        try {
          const res = await fetch(`/${CABANG}/invoiceall/json`);
          if (!res.ok) return;
          const data = await res.json();
          renderInvoices(data);
        } catch (e) {
          console.error("Failed to refresh invoices", e);
        }
      }

      function renderInvoices(list) {
        const container = document.getElementById("invoice-grid");
        if (!container) return;
        container.innerHTML = "";

        list.forEach(inv => {
          const items = inv.items || [];
          const discount = inv.discount || 0;
          const total = inv.total || 0;
          const subtotal = total + discount;

          const wrapper = document.createElement("div");
          wrapper.className = "flex justify-center";

          wrapper.innerHTML = `
            <div
              id="invoice-${inv._id}"
              class="bg-white w-full max-w-xs rounded-2xl shadow-sm border border-slate-200 px-4 pt-3 pb-0 flex flex-col"
            >
              <!-- ÿßŸÑŸáŸäÿØÿ± ÿØÿßÿÆŸÑ ÿßŸÑŸÉÿ±ÿ™ -->
              <div class="flex items-start justify-between gap-2 mb-2">
                <div class="text-[11px] leading-snug">
                  <div class="text-sm font-semibold text-slate-900">
                    The Shawarma
                  </div>
                  ${inv.customerName ? `
                    <div class="mt-1 text-slate-700">
                      <div class="text-[10px] uppercase tracking-wide text-slate-500">
                        PELANGGAN
                      </div>
                      <div class="text-[11px] font-semibold">
                        ${inv.customerName}
                      </div>
                    </div>` : ""}
                </div>

                <div class="text-right">
                  <div class="font-mono text-xl font-extrabold tracking-wide text-slate-900 leading-none">
                    #${inv.invoiceNumber || ""}
                  </div>
                  <div class="mt-1 text-[10px] text-slate-600">
                    ${inv.date ? new Date(inv.date).toLocaleDateString("id-ID") : ""}
                  </div>
                  ${inv.source ? `
                    <div class="mt-0.5 text-[10px] text-slate-500 capitalize">
                      ${inv.source}
                    </div>` : ""}
                </div>
              </div>

              <div class="border-t border-dotted border-slate-300 my-2"></div>

              <!-- ÿßŸÑÿ£ÿµŸÜÿßŸÅ -->
              <div class="space-y-1.5 max-h-32 overflow-y-auto pr-1 no-scrollbar">
                ${items.map(it => `
                  <div class="flex justify-between gap-2">
                    <div class="flex-1">
                      <div class="text-[11px] font-semibold text-slate-900">
                        ${it.name || ""}
                      </div>
                      <div class="text-[10px] text-slate-500 space-y-0.5">
                        <div>
                          ${(it.quantity || 1)}x ¬∑
                          Rp ${(it.unitPrice || it.subtotal || 0).toLocaleString("id-ID")}
                        </div>
                        ${it.note ? `<div>Note: ${it.note}</div>` : ""}
                        ${(it.addons && it.addons.length)
                          ? `<div>Add-ons: ${it.addons.join(", ")}</div>`
                          : ""}
                      </div>
                    </div>
                    <div class="text-right text-[11px] font-mono text-slate-900 min-w-[72px]">
                      Rp ${(it.subtotal || (it.unitPrice || 0) * (it.quantity || 1)).toLocaleString("id-ID")}
                    </div>
                  </div>
                `).join("")}
              </div>

              <!-- ÿßŸÑŸÖÿ¨ŸÖŸàÿπÿßÿ™ -->
              <div class="border-t border-slate-200 mt-3 pt-2 space-y-1 text-[11px] w-full">
                <div class="flex justify-between">
                  <span class="text-slate-500">Sub-total</span>
                  <span class="font-mono text-slate-800">
                    Rp ${subtotal.toLocaleString("id-ID")}
                  </span>
                </div>
                <div class="flex justify-between">
                  <span class="text-slate-500">Discount</span>
                  <span class="font-mono text-slate-800">
                    Rp ${discount.toLocaleString("id-ID")}
                  </span>
                </div>
                <div class="flex justify-between pt-1 border-t border-slate-200 mt-1 mb-1">
                  <span class="font-semibold text-slate-900">Total</span>
                  <span class="font-mono font-semibold text-slate-900">
                    Rp ${total.toLocaleString("id-ID")}
                  </span>
                </div>
              </div>
              <br>

              <!-- ÿ¥ÿ±Ÿäÿ∑ ÿßŸÑÿ£ÿ≤ÿ±ÿßÿ± -->
              <div class="no-print mt-auto -mx-4">
                <div class="grid grid-cols-3 text-[11px] font-medium text-white rounded-b-2xl overflow-hidden">
                  <form action="/${CABANG}/invoiceall/${inv._id}/done" method="POST">
                    <button
                      type="submit"
                      class="w-full h-full py-2 bg-slate-900 hover:bg-slate-950"
                    >
                      Selesai
                    </button>
                  </form>
                  <form action="/${CABANG}/invoiceall/${inv._id}/delete" method="POST">
                    <button
                      type="submit"
                      class="w-full h-full py-2 bg-red-700 hover:bg-red-800"
                    >
                      Hapus
                    </button>
                  </form>
                  <button
                    type="button"
                    class="py-2 bg-emerald-600 hover:bg-emerald-700"
                    onclick="printInvoice('${inv._id}')"
                  >
                    Print
                  </button>
                </div>
              </div>
            </div>
          `;

          container.appendChild(wrapper);
        });
      }

      // ÿ£ŸàŸÑ ÿ™ÿ≠ŸÖŸäŸÑ + ÿ™ÿ≠ÿØŸäÿ´ ŸÉŸÑ 2 ÿ´ÿßŸÜŸäÿ©
      refreshInvoices();
      setInterval(refreshInvoices, 2000);

      // üßæ ÿ∑ÿ®ÿßÿπÿ© ŸÅÿßÿ™Ÿàÿ±ÿ© Ÿàÿßÿ≠ÿØÿ© ÿ®ÿ¥ŸÉŸÑ ŸÅÿßÿ™Ÿàÿ±ÿ© (receipt)
      function printInvoice(id) {
        const card = document.getElementById("invoice-" + id);
        if (!card) return;

        // ŸÜÿßÿÆÿ∞ ŸÖÿ≠ÿ™ŸàŸâ ÿßŸÑŸÉÿ±ÿ™ ÿ®ÿØŸàŸÜ ÿ£ÿ≤ÿ±ÿßÿ±
        const clone = card.cloneNode(true);
        clone.querySelectorAll(".no-print").forEach(el => el.remove());

        const win = window.open("", "_blank", "width=400,height=700");
        win.document.write(`
          <html>
            <head>
              <title>Invoice</title>
              <style>
                body {
                  margin: 0;
                  padding: 16px;
                  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
                  background: #ffffff;
                }
                .receipt {
                  max-width: 320px;
                  margin: 0 auto;
                  border: 1px solid #e5e7eb;
                  border-radius: 12px;
                  padding: 16px;
                  font-size: 11px;
                  color: #0f172a;
                }
                .receipt-header {
                  text-align: center;
                  margin-bottom: 12px;
                  border-bottom: 1px dashed #cbd5f5;
                  padding-bottom: 8px;
                }
                .receipt-header h1 {
                  margin: 0;
                  font-size: 14px;
                  letter-spacing: 0.08em;
                  text-transform: uppercase;
                }
                .receipt-header .branch {
                  font-size: 10px;
                  color: #64748b;
                  margin-top: 2px;
                }
                .receipt-header .inv {
                  font-family: monospace;
                  font-size: 13px;
                  font-weight: 700;
                  margin-top: 4px;
                }
                .receipt-body {
                  margin-top: 8px;
                  border-bottom: 1px dashed #e2e8f0;
                  padding-bottom: 8px;
                }
                .receipt-footer {
                  margin-top: 8px;
                  font-size: 10px;
                  text-align: center;
                  color: #94a3b8;
                }
              </style>
            </head>
            <body>
              <div class="receipt">
                <div class="receipt-header">
                  <h1>The Shawarma</h1>
                  <div class="branch">Cabang: ${CABANG.toUpperCase()}</div>
                  <!-- ŸÜÿ≥ÿ™ÿÆÿ±ÿ¨ ÿ±ŸÇŸÖ ÿßŸÑŸÅÿßÿ™Ÿàÿ±ÿ© ŸÖŸÜ ÿßŸÑŸÉÿ±ÿ™ -->
                  <div class="inv">${
                    card.querySelector(".font-mono") 
                      ? card.querySelector(".font-mono").textContent.trim()
                      : ""
                  }</div>
                </div>
                <div class="receipt-body">
                  ${clone.innerHTML}
                </div>
                <div class="receipt-footer">
                  Terima kasih üôè
                </div>
              </div>
            </body>
          </html>
        `);
        win.document.close();

        win.onload = function () {
          win.focus();
          win.print();
          win.close();
        };
      }
    </script>
  </body>
</html>
