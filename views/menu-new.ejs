<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title><%= title || "Menu" %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-slate-100 text-slate-800">
    <div class="max-w-3xl mx-auto p-4">
      <h1 class="text-2xl font-semibold mb-4">Tambah Menu Baru</h1>

      <% if (typeof success !== "undefined") { %>
        <div class="mb-4 rounded-xl border border-emerald-200 bg-emerald-50 px-3 py-2 text-sm text-emerald-800">
          <%= success %>
        </div>
      <% } %>

      <form
        action="/menu/new"
        method="POST"
        class="bg-white rounded-2xl shadow-sm border border-slate-200 p-4 space-y-4"
      >
        <!-- الاسم + الفئة -->
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <label class="block text-xs font-medium text-slate-600 mb-1">
              Nama Menu
            </label>
            <input
              type="text"
              name="name"
              required
              class="w-full rounded-xl border border-slate-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Contoh: Shawarma Besar"
            />
          </div>

          <div>
            <label class="block text-xs font-medium text-slate-600 mb-1">
              Kategori
            </label>
            <input
              type="text"
              name="category"
              class="w-full rounded-xl border border-slate-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Contoh: Shawarma, Minuman"
            />
          </div>
        </div>

        <!-- رابط الصورة -->
        <div>
          <label class="block text-xs font-medium text-slate-600 mb-1">
            Gambar (URL)
          </label>
          <input
            type="text"
            name="imageUrl"
            class="w-full rounded-xl border border-slate-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
            placeholder="https://..."
          />
        </div>

        <!-- الأسعار الأساسية -->
        <div class="border-t border-slate-200 pt-4">
          <h2 class="text-sm font-semibold mb-2">Harga Utama</h2>
          <div class="grid gap-3 sm:grid-cols-4 text-xs">
            <div>
              <label class="block text-[11px] text-slate-600 mb-1">
                In-Store
              </label>
              <input
                type="number"
                name="price_inStore"
                min="0"
                class="w-full rounded-xl border border-slate-200 px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="30000"
              />
            </div>
            <div>
              <label class="block text-[11px] text-slate-600 mb-1">
                GoFood
              </label>
              <input
                type="number"
                name="price_goFood"
                min="0"
                class="w-full rounded-xl border border-slate-200 px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="32000"
              />
            </div>
            <div>
              <label class="block text-[11px] text-slate-600 mb-1">
                GrabFood
              </label>
              <input
                type="number"
                name="price_grabFood"
                min="0"
                class="w-full rounded-xl border border-slate-200 px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="32000"
              />
            </div>
            <div>
              <label class="block text-[11px] text-slate-600 mb-1">
                ShopeeFood
              </label>
              <input
                type="number"
                name="price_shopeeFood"
                min="0"
                class="w-full rounded-xl border border-slate-200 px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="32000"
              />
            </div>
          </div>
        </div>

        <!-- الإضافات -->
        <div class="border-t border-slate-200 pt-4">
          <div class="flex items-center justify-between mb-2">
            <h2 class="text-sm font-semibold">Add-ons</h2>
            <button
              type="button"
              onclick="addAddonRow()"
              class="text-xs px-3 py-1.5 rounded-full bg-slate-900 text-white hover:bg-slate-950"
            >
              + Tambah Add-on
            </button>
          </div>

          <div id="addons-container" class="space-y-3 text-xs">
            <!-- صف Addon واحد مثال (JS ينسخه) -->
          </div>
        </div>

        <!-- زر الحفظ -->
        <div class="pt-2 flex justify-end">
          <button
            type="submit"
            class="px-4 py-2 rounded-xl bg-emerald-600 text-white text-sm font-medium hover:bg-emerald-700"
          >
            Simpan Menu
          </button>
        </div>
      </form>
    </div>

    <script>
      function addAddonRow() {
        const container = document.getElementById("addons-container");
        const row = document.createElement("div");
        row.className =
          "border border-slate-200 rounded-2xl p-3 bg-slate-50 grid gap-3 sm:grid-cols-5 items-end";

        row.innerHTML = `
          <div class="sm:col-span-2">
            <label class="block text-[11px] text-slate-600 mb-1">
              Nama Add-on
            </label>
            <input
              type="text"
              name="addon_name"
              class="w-full rounded-xl border border-slate-200 px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Contoh: Keju, Fries"
            />
          </div>

          <div>
            <label class="block text-[11px] text-slate-600 mb-1">
              In-Store
            </label>
            <input
              type="number"
              name="addon_price_inStore"
              min="0"
              class="w-full rounded-xl border border-slate-200 px-2 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="0"
            />
          </div>
          <div>
            <label class="block text-[11px] text-slate-600 mb-1">
              GoFood
            </label>
            <input
              type="number"
              name="addon_price_goFood"
              min="0"
              class="w-full rounded-xl border border-slate-200 px-2 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="0"
            />
          </div>
          <div>
            <label class="block text-[11px] text-slate-600 mb-1">
              Shopee/Grab
            </label>
            <input
              type="number"
              name="addon_price_grabFood"
              min="0"
              class="w-full rounded-xl border border-slate-200 px-2 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="0"
            />
            <input
              type="number"
              name="addon_price_shopeeFood"
              min="0"
              class="w-full rounded-xl border border-slate-200 px-2 py-1.5 text-sm mt-1 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="0"
            />
          </div>
        `;

        container.appendChild(row);
      }

      // نضيف صف واحد افتراضيًا
      addAddonRow();
    </script>
  </body>
</html>
